block content
    #container
        header
            .main
                h1.title
                    a(href='#{base}')= title
                a.formToggler &#xf067;

        .main
            section.content
                if locals.paste
                    ul.meta
                        li.date #{date}
                        li.language
                        li.fruits 
                            i(class='fruit fruit#{fruit}')

                    div
                        code.paste #{paste}
                else
                    //img(src='/images/logo.svg', class='logo', alt='ddd')


                form(method='post', action='/paste/new', class='leForm #{active}')
