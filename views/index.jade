extends layout

block content
    #container
        header
            .main
                h1.title
                    a(href='#{base}')= title
                a.formToggler &#xf067;

        .main
            section.content
                form(method='post', action='/paste/new', class='leForm #{active}')
                    textarea(name='paste', placeholder="var dpaste = 'Angry code paster for you and your family';")
                    button(type='submit', class='btn-red') Add
                    span.alert Let's put some code in there, duh?

                if locals.paste
                    ul.meta
                        li.date #{date}
                        li.link
                            a(href='#{link}', title='Permalink')= link
                        li.fruits 
                            i(class='fruit fruit#{fruit}')

                    div
                        code.paste #{paste}

        footer
            .main
                dl
                    dt Design
                    dd
                        a(href='http://victordarras.fr/', target='_blank', title='Web and print Designer') Victor Darras
                dl
                    dt Development
                    dd
                        a(href='http://www.zaibatsu.fr/', target='_blank', title='Zaibatsu - Blog de Tom Panier, d√©veloppeur web') Tom Panier
                a.fruitsrc(href='http://www.pixeljoint.com/p/19896.htm', target='_blank')

        script(src="/javascripts/jquery-1.9.1.min.js")
        script(src="/javascripts/script.js")